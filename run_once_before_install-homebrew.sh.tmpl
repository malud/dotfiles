#!/usr/bin/env bash
{{ if eq .chezmoi.os "darwin" -}}
set -euo pipefail

# Check if Homebrew is already installed
if [ -f /opt/homebrew/bin/brew ] || [ -f /usr/local/bin/brew ]; then
  echo "‚úÖ Homebrew already installed"
  if [ -f /opt/homebrew/bin/brew ]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
  elif [ -f /usr/local/bin/brew ]; then
    eval "$(/usr/local/bin/brew shellenv)"
  fi
  exit 0
fi

echo "üì¶ Installing Homebrew on macOS (non-interactive)..."

if ! command -v curl &>/dev/null; then
  echo "‚ùå curl not found. Install curl first."
  exit 1
fi

# Non-interactive installation
NONINTERACTIVE=1 /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

# Verify installation and add to PATH
if [ -f /opt/homebrew/bin/brew ]; then
  eval "$(/opt/homebrew/bin/brew shellenv)"
  echo "‚úÖ Homebrew installed successfully!"
  echo "‚ÑπÔ∏è  brew is now available: $(command -v brew)"
elif [ -f /usr/local/bin/brew ]; then
  eval "$(/usr/local/bin/brew shellenv)"
  echo "‚úÖ Homebrew installed successfully!"
  echo "‚ÑπÔ∏è  brew is now available: $(command -v brew)"
else
  echo "‚ùå Homebrew installation failed"
  exit 1
fi

{{ else -}}
echo "‚ÑπÔ∏è  This script is for macOS only - skipping on Linux"
exit 0
{{ end -}}

