#!/usr/bin/env bash
{{ if eq .chezmoi.os "darwin" -}}
set -euo pipefail

if command -v brew &>/dev/null; then
  echo "‚úÖ Homebrew already installed"
  exit 0
fi

echo "üì¶ Installing Homebrew automatically (non-interactive)..."

if ! command -v curl &>/dev/null; then
  echo "‚ùå curl not found. Install curl first."
  exit 1
fi

# Non-interactive installation (same as Linux)
NONINTERACTIVE=1 /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

# Setup Homebrew in PATH for Apple Silicon
if [ -f /opt/homebrew/bin/brew ]; then
  eval "$(/opt/homebrew/bin/brew shellenv)"
elif [ -f /usr/local/bin/brew ]; then
  eval "$(/usr/local/bin/brew shellenv)"
fi

echo "‚úÖ Homebrew installed successfully!"
echo "‚ÑπÔ∏è  Homebrew will be available after restarting your shell"

{{ else -}}
echo "‚ö†Ô∏è  Homebrew is macOS-only"
exit 0
{{ end -}}

