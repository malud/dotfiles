#!/usr/bin/env bash
{{ if ne .chezmoi.os "darwin" -}}
set -euo pipefail

echo "üì¶ Installing modern CLI tools for Linux..."

# Detect package manager
if command -v apt-get &>/dev/null; then
  PKG_MGR="apt"
elif command -v dnf &>/dev/null; then
  PKG_MGR="dnf"
elif command -v yum &>/dev/null; then
  PKG_MGR="yum"
elif command -v apk &>/dev/null; then
  PKG_MGR="apk"
else
  echo "‚ö†Ô∏è  No supported package manager found"
  PKG_MGR="none"
fi

# Determine if we need sudo
USE_SUDO=false
if [ "$(id -u)" -ne 0 ] && command -v sudo &>/dev/null; then
  USE_SUDO=true
fi


# Install tools based on package manager
case "$PKG_MGR" in
  apt)
    echo "üì¶ Using apt-get..."
    if [ "$USE_SUDO" = true ]; then
      sudo apt-get update
    else
      apt-get update
    fi

    # bat (often packaged as batcat)
    if ! command -v bat &>/dev/null && ! command -v batcat &>/dev/null; then
      if [ "$USE_SUDO" = true ]; then
        sudo apt-get install -y bat
      else
        apt-get install -y bat
      fi
      # Create symlink if installed as batcat
      if command -v batcat &>/dev/null && ! command -v bat &>/dev/null; then
        mkdir -p "$HOME/.local/bin"
        ln -sf "$(which batcat)" "$HOME/.local/bin/bat"
      fi
    fi

    # fd (often packaged as fd-find)
    if ! command -v fd &>/dev/null && ! command -v fdfind &>/dev/null; then
      if [ "$USE_SUDO" = true ]; then
        sudo apt-get install -y fd-find
      else
        apt-get install -y fd-find
      fi
      # Create symlink if installed as fdfind
      if command -v fdfind &>/dev/null && ! command -v fd &>/dev/null; then
        mkdir -p "$HOME/.local/bin"
        ln -sf "$(which fdfind)" "$HOME/.local/bin/fd"
      fi
    fi

    # ripgrep
    if ! command -v rg &>/dev/null; then
      if [ "$USE_SUDO" = true ]; then
        sudo apt-get install -y ripgrep
      else
        apt-get install -y ripgrep
      fi
    fi

    # fzf
    if ! command -v fzf &>/dev/null; then
      if [ "$USE_SUDO" = true ]; then
        sudo apt-get install -y fzf
      else
        apt-get install -y fzf
      fi
    fi

    # Essential development tools

    # Install Neovim using the official prebuilt tarball (requires curl)
    if ! command -v nvim >/dev/null 2>&1; then
      echo "üì¶ Installing Neovim from official pre-built archive‚Ä¶"

      # Determine architecture and choose the correct tarball name
      arch="$(uname -m)"
      case "$arch" in
        x86_64)
          nvim_pkg="nvim-linux-x86_64.tar.gz"
          ;;
        aarch64|arm64)
          nvim_pkg="nvim-linux-arm64.tar.gz"
          ;;
        *)
          echo "‚ö†Ô∏è Unsupported architecture: $arch"
          return 0
          ;;
      esac

      # Create a temporary directory for download
      nvim_tmp=$(mktemp -d)
      curl -sL -o "$nvim_tmp/$nvim_pkg" \
        "https://github.com/neovim/neovim/releases/latest/download/${nvim_pkg}"

      # Define install base under $HOME; extract tarball there
      install_base="$HOME/.local/share/${nvim_pkg%.tar.gz}"
      rm -rf "$install_base"
      mkdir -p "$HOME/.local/share" "$HOME/.local/bin"
      tar -C "$HOME/.local/share" -xzf "$nvim_tmp/$nvim_pkg"

      # Create/update symlink in ~/.local/bin to the Neovim binary
      ln -sfn "$install_base/bin/nvim" "$HOME/.local/bin/nvim"

      # Clean up temporary directory
      rm -rf "$nvim_tmp"

      # Lazy setup plugins
      $HOME/.local/bin/nvim --headless "+Lazy! sync" "+TSUpdate" +qa
    fi

    # Network debugging tools
    echo "üì¶ Installing network debugging tools..."

    # netcat (traditional networking tool)
    if ! command -v nc &>/dev/null; then
      if [ "$USE_SUDO" = true ]; then
        sudo apt-get install -y netcat-openbsd
      else
        apt-get install -y netcat-openbsd
      fi
    fi

    # nmap (network scanner)
    if ! command -v nmap &>/dev/null; then
      if [ "$USE_SUDO" = true ]; then
        sudo apt-get install -y nmap
      else
        apt-get install -y nmap
      fi
    fi

    # iputils-ping (basic network utility - provides standard ping)
    if ! command -v ping &>/dev/null; then
      if [ "$USE_SUDO" = true ]; then
        sudo apt-get install -y iputils-ping
      else
        apt-get install -y iputils-ping
      fi
    fi

    # mtr (network diagnostic tool - combines ping and traceroute)
    if ! command -v mtr &>/dev/null; then
      if [ "$USE_SUDO" = true ]; then
        sudo apt-get install -y mtr-tiny
      else
        apt-get install -y mtr-tiny
      fi
    fi

    # gping (ping with a graph - standalone tool, implements its own ICMP ping)
    if ! command -v gping &>/dev/null; then
      echo "üì¶ Installing gping..."
      GPING_VERSION="v1.20.1"
      ARCH="$(uname -m)"
      if [ "$ARCH" = "x86_64" ]; then
        GPING_ARCH="x86_64"
      elif [ "$ARCH" = "aarch64" ]; then
        GPING_ARCH="arm64"
      else
        GPING_ARCH="x86_64"
      fi
      mkdir -p "$HOME/.local/bin"
      GPING_TMP=$(mktemp -d)

      if curl -fsSL "https://github.com/orf/gping/releases/download/gping-${GPING_VERSION}/gping-Linux-musl-${GPING_ARCH}.tar.gz" -o "$GPING_TMP/gping.tar.gz"; then
        if tar -xzf "$GPING_TMP/gping.tar.gz" -C "$GPING_TMP" 2>/dev/null; then
          mv "$GPING_TMP/gping" "$HOME/.local/bin/"
          echo "  ‚úì gping installed successfully"
          echo "  ‚ÑπÔ∏è  gping may require elevated privileges or capabilities to use raw sockets"
          echo "     If needed, run: sudo setcap cap_net_raw+ep \$(which gping)"
        else
          echo "  ‚ö†Ô∏è  Failed to extract gping, skipping..."
        fi
      else
        echo "  ‚ö†Ô∏è  Failed to download gping, skipping..."
      fi
      rm -rf "$GPING_TMP"
    fi

    # trippy (modern traceroute with TUI)
    if ! command -v trip &>/dev/null; then
      echo "üì¶ Installing trippy..."
      TRIPPY_VERSION="0.13.0"
      ARCH="$(uname -m)"
      if [ "$ARCH" = "x86_64" ]; then
        TRIPPY_ARCH="x86_64"
      elif [ "$ARCH" = "aarch64" ]; then
        TRIPPY_ARCH="aarch64"
      else
        TRIPPY_ARCH="x86_64"
      fi
      mkdir -p "$HOME/.local/bin"
      TRIPPY_TMP=$(mktemp -d)
      if curl -fsSL "https://github.com/fujiapple852/trippy/releases/download/${TRIPPY_VERSION}/trippy-${TRIPPY_VERSION}-${TRIPPY_ARCH}-unknown-linux-musl.tar.gz" -o "$TRIPPY_TMP/trippy.tar.gz"; then
        if tar -xzf "$TRIPPY_TMP/trippy.tar.gz" -C "$TRIPPY_TMP" 2>/dev/null; then
          mv "$TRIPPY_TMP/trip" "$HOME/.local/bin/" 2>/dev/null || echo "  ‚ö†Ô∏è  Failed to move trip binary, skipping..."
          if [ -f "$HOME/.local/bin/trip" ]; then
            echo "  ‚úì trippy installed successfully"
          fi
        else
          echo "  ‚ö†Ô∏è  Failed to extract trippy, skipping..."
        fi
      else
        echo "  ‚ö†Ô∏è  Failed to download trippy, skipping..."
      fi
      rm -rf "$TRIPPY_TMP"
    fi

    # bandwhich (network utilization by process - requires root/capabilities)
    if ! command -v bandwhich &>/dev/null; then
      echo "üì¶ Installing bandwhich..."
      BANDWHICH_VERSION="v0.23.1"
      ARCH="$(uname -m)"
      if [ "$ARCH" = "x86_64" ]; then
        BANDWHICH_ARCH="x86_64"
      elif [ "$ARCH" = "aarch64" ]; then
        BANDWHICH_ARCH="aarch64"
      else
        BANDWHICH_ARCH="x86_64"
      fi
      mkdir -p "$HOME/.local/bin"
      BANDWHICH_TMP=$(mktemp -d)

      if curl -fsSL "https://github.com/imsnif/bandwhich/releases/download/${BANDWHICH_VERSION}/bandwhich-${BANDWHICH_VERSION}-${BANDWHICH_ARCH}-unknown-linux-musl.tar.gz" -o "$BANDWHICH_TMP/bandwhich.tar.gz"; then
        if tar -xzf "$BANDWHICH_TMP/bandwhich.tar.gz" -C "$BANDWHICH_TMP" 2>/dev/null; then
          mv "$BANDWHICH_TMP/bandwhich" "$HOME/.local/bin/" 2>/dev/null || echo "  ‚ö†Ô∏è  Failed to move bandwhich binary, skipping..."
          if [ -f "$HOME/.local/bin/bandwhich" ]; then
            echo "  ‚úì bandwhich installed successfully"
            echo "  ‚ÑπÔ∏è  bandwhich requires root privileges or CAP_NET_RAW capability to run"
            echo "     Run: sudo setcap cap_net_raw,cap_net_admin+ep \$(which bandwhich)"
          fi
        else
          echo "  ‚ö†Ô∏è  Failed to extract bandwhich, skipping..."
        fi
      else
        echo "  ‚ö†Ô∏è  Failed to download bandwhich, skipping..."
      fi
      rm -rf "$BANDWHICH_TMP"
    fi

    if ! command -v tmux &>/dev/null; then
      if [ "$USE_SUDO" = true ]; then
        sudo apt-get install -y tmux
      else
        apt-get install -y tmux
      fi
    fi

    if ! command -v git &>/dev/null; then
      if [ "$USE_SUDO" = true ]; then
        sudo apt-get install -y git
      else
        apt-get install -y git
      fi
    fi

    if ! command -v jq &>/dev/null; then
      if [ "$USE_SUDO" = true ]; then
        sudo apt-get install -y jq
      else
        apt-get install -y jq
      fi
    fi

    # yq (Go version - better than Python version)
    if ! command -v yq &>/dev/null; then
      echo "üì¶ Installing yq..."
      YQ_VERSION="v4.44.1"
      YQ_BINARY="yq_linux_amd64"
      curl -sL "https://github.com/mikefarah/yq/releases/download/${YQ_VERSION}/${YQ_BINARY}" -o "$HOME/.local/bin/yq"
      chmod +x "$HOME/.local/bin/yq"
    fi

    # kubectl (if not already installed)
    if ! command -v kubectl &>/dev/null; then
      echo "üì¶ Installing kubectl..."
      curl -sLO "https://dl.k8s.io/release/$(curl -sL https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
      chmod +x kubectl
      mv kubectl "$HOME/.local/bin/"
    fi

    # krew (kubectl plugin manager)
    if ! command -v kubectl-krew &>/dev/null; then
      echo "üì¶ Installing krew..."
      (
        set -x; cd "$(mktemp -d)" &&
        OS="$(uname | tr '[:upper:]' '[:lower:]')" &&
        ARCH="$(uname -m | sed -e 's/x86_64/amd64/' -e 's/\(arm\)\(64\)\?.*/\1\2/' -e 's/aarch64$/arm64/')" &&
        KREW="krew-${OS}_${ARCH}" &&
        curl -fsSLO "https://github.com/kubernetes-sigs/krew/releases/latest/download/${KREW}.tar.gz" &&
        tar zxvf "${KREW}.tar.gz" &&
        ./"${KREW}" install krew
      )
      export PATH="${KREW_ROOT:-$HOME/.krew}/bin:$PATH"
    fi

    # kustomize with helm plugin
    if ! command -v kustomize &>/dev/null; then
      echo "üì¶ Installing kustomize..."
      curl -s "https://raw.githubusercontent.com/kubernetes-sigs/kustomize/master/hack/install_kustomize.sh" | bash
      mv kustomize "$HOME/.local/bin/"

      # Install helm plugin for kustomize
      echo "üì¶ Installing kustomize helm plugin..."
      mkdir -p "$HOME/.config/kustomize/plugin"
      cd "$HOME/.config/kustomize/plugin"
      kustomize plugin install https://github.com/kubernetes-sigs/kustomize/releases/download/kustomize/v5.0.0/kustomize_v5.0.0_linux_amd64.tar.gz || true
    fi

    # k9s
    if ! command -v k9s &>/dev/null; then
      echo "üì¶ Installing k9s..."
      K9S_VERSION="v0.32.5"
      curl -sL "https://github.com/derailed/k9s/releases/download/${K9S_VERSION}/k9s_Linux_amd64.tar.gz" -o /tmp/k9s.tar.gz
      tar -xzf /tmp/k9s.tar.gz -C /tmp
      mv /tmp/k9s "$HOME/.local/bin/"
      rm /tmp/k9s.tar.gz
    fi

    # eza (modern ls replacement)
    if ! command -v eza &>/dev/null; then
      echo "üì¶ Installing eza..."
      EZA_VERSION="v0.20.11"
      ARCH="$(uname -m)"
      if [ "$ARCH" = "x86_64" ]; then
        EZA_ARCH="x86_64"
      elif [ "$ARCH" = "aarch64" ]; then
        EZA_ARCH="aarch64"
      else
        EZA_ARCH="x86_64"
      fi
      curl -sL "https://github.com/eza-community/eza/releases/download/${EZA_VERSION}/eza_${EZA_ARCH}-unknown-linux-gnu.tar.gz" -o /tmp/eza.tar.gz
      tar -xzf /tmp/eza.tar.gz -C /tmp
      mv /tmp/eza "$HOME/.local/bin/"
      rm /tmp/eza.tar.gz
    fi

    # zoxide (smarter cd)
    if ! command -v zoxide &>/dev/null; then
      echo "üì¶ Installing zoxide..."
      ZOXIDE_VERSION="v0.9.6"
      ARCH="$(uname -m)"
      if [ "$ARCH" = "x86_64" ]; then
        ZOXIDE_ARCH="x86_64"
      elif [ "$ARCH" = "aarch64" ]; then
        ZOXIDE_ARCH="aarch64"
      else
        ZOXIDE_ARCH="x86_64"
      fi
      curl -sL "https://github.com/ajeetdsouza/zoxide/releases/download/${ZOXIDE_VERSION}/zoxide-${ZOXIDE_VERSION}-${ZOXIDE_ARCH}-unknown-linux-musl.tar.gz" -o /tmp/zoxide.tar.gz
      tar -xzf /tmp/zoxide.tar.gz -C /tmp
      mv /tmp/zoxide "$HOME/.local/bin/"
      rm /tmp/zoxide.tar.gz
    fi
    ;;

  dnf|yum)
    echo "üì¶ Using $PKG_MGR..."

    if [ "$USE_SUDO" = true ]; then
      command -v bat &>/dev/null || sudo "$PKG_MGR" install -y bat
      command -v fd &>/dev/null || sudo "$PKG_MGR" install -y fd-find
      command -v rg &>/dev/null || sudo "$PKG_MGR" install -y ripgrep
      command -v fzf &>/dev/null || sudo "$PKG_MGR" install -y fzf
    else
      command -v bat &>/dev/null || "$PKG_MGR" install -y bat
      command -v fd &>/dev/null || "$PKG_MGR" install -y fd-find
      command -v rg &>/dev/null || "$PKG_MGR" install -y ripgrep
      command -v fzf &>/dev/null || "$PKG_MGR" install -y fzf
    fi

    # eza (modern ls replacement)
    if ! command -v eza &>/dev/null; then
      echo "üì¶ Installing eza..."
      EZA_VERSION="v0.20.11"
      ARCH="$(uname -m)"
      if [ "$ARCH" = "x86_64" ]; then
        EZA_ARCH="x86_64"
      elif [ "$ARCH" = "aarch64" ]; then
        EZA_ARCH="aarch64"
      else
        EZA_ARCH="x86_64"
      fi
      mkdir -p "$HOME/.local/bin"
      curl -sL "https://github.com/eza-community/eza/releases/download/${EZA_VERSION}/eza_${EZA_ARCH}-unknown-linux-gnu.tar.gz" -o /tmp/eza.tar.gz
      tar -xzf /tmp/eza.tar.gz -C /tmp
      mv /tmp/eza "$HOME/.local/bin/"
      rm /tmp/eza.tar.gz
    fi

    # zoxide (smarter cd)
    if ! command -v zoxide &>/dev/null; then
      echo "üì¶ Installing zoxide..."
      ZOXIDE_VERSION="v0.9.6"
      ARCH="$(uname -m)"
      if [ "$ARCH" = "x86_64" ]; then
        ZOXIDE_ARCH="x86_64"
      elif [ "$ARCH" = "aarch64" ]; then
        ZOXIDE_ARCH="aarch64"
      else
        ZOXIDE_ARCH="x86_64"
      fi
      mkdir -p "$HOME/.local/bin"
      curl -sL "https://github.com/ajeetdsouza/zoxide/releases/download/${ZOXIDE_VERSION}/zoxide-${ZOXIDE_VERSION}-${ZOXIDE_ARCH}-unknown-linux-musl.tar.gz" -o /tmp/zoxide.tar.gz
      tar -xzf /tmp/zoxide.tar.gz -C /tmp
      mv /tmp/zoxide "$HOME/.local/bin/"
      rm /tmp/zoxide.tar.gz
    fi
    ;;

  apk)
    echo "üì¶ Using apk (Alpine)..."

    if [ "$USE_SUDO" = true ]; then
      command -v bat &>/dev/null || sudo apk add bat
      command -v fd &>/dev/null || sudo apk add fd
      command -v rg &>/dev/null || sudo apk add ripgrep
      command -v fzf &>/dev/null || sudo apk add fzf
    else
      command -v bat &>/dev/null || apk add bat
      command -v fd &>/dev/null || apk add fd
      command -v rg &>/dev/null || apk add ripgrep
      command -v fzf &>/dev/null || apk add fzf
    fi

    # eza (modern ls replacement)
    if ! command -v eza &>/dev/null; then
      echo "üì¶ Installing eza..."
      EZA_VERSION="v0.20.11"
      ARCH="$(uname -m)"
      if [ "$ARCH" = "x86_64" ]; then
        EZA_ARCH="x86_64"
      elif [ "$ARCH" = "aarch64" ]; then
        EZA_ARCH="aarch64"
      else
        EZA_ARCH="x86_64"
      fi
      mkdir -p "$HOME/.local/bin"
      curl -sL "https://github.com/eza-community/eza/releases/download/${EZA_VERSION}/eza_${EZA_ARCH}-unknown-linux-gnu.tar.gz" -o /tmp/eza.tar.gz
      tar -xzf /tmp/eza.tar.gz -C /tmp
      mv /tmp/eza "$HOME/.local/bin/"
      rm /tmp/eza.tar.gz
    fi

    # zoxide (smarter cd)
    if ! command -v zoxide &>/dev/null; then
      echo "üì¶ Installing zoxide..."
      ZOXIDE_VERSION="v0.9.6"
      ARCH="$(uname -m)"
      if [ "$ARCH" = "x86_64" ]; then
        ZOXIDE_ARCH="x86_64"
      elif [ "$ARCH" = "aarch64" ]; then
        ZOXIDE_ARCH="aarch64"
      else
        ZOXIDE_ARCH="x86_64"
      fi
      mkdir -p "$HOME/.local/bin"
      curl -sL "https://github.com/ajeetdsouza/zoxide/releases/download/${ZOXIDE_VERSION}/zoxide-${ZOXIDE_VERSION}-${ZOXIDE_ARCH}-unknown-linux-musl.tar.gz" -o /tmp/zoxide.tar.gz
      tar -xzf /tmp/zoxide.tar.gz -C /tmp
      mv /tmp/zoxide "$HOME/.local/bin/"
      rm /tmp/zoxide.tar.gz
    fi
    ;;

  none)
    echo "üì¶ Installing all tools via pre-built binaries..."

    mkdir -p "$HOME/.local/bin"

    # bat
    if ! command -v bat &>/dev/null; then
      echo "üì¶ Installing bat..."
      BAT_VERSION="v0.24.0"
      ARCH="$(uname -m)"
      if [ "$ARCH" = "x86_64" ]; then
        BAT_ARCH="x86_64"
      elif [ "$ARCH" = "aarch64" ]; then
        BAT_ARCH="aarch64"
      else
        BAT_ARCH="x86_64"
      fi
      curl -sL "https://github.com/sharkdp/bat/releases/download/${BAT_VERSION}/bat-${BAT_VERSION}-${BAT_ARCH}-unknown-linux-musl.tar.gz" -o /tmp/bat.tar.gz
      tar -xzf /tmp/bat.tar.gz -C /tmp
      mv /tmp/bat-${BAT_VERSION}-${BAT_ARCH}-unknown-linux-musl/bat "$HOME/.local/bin/"
      rm -rf /tmp/bat.tar.gz /tmp/bat-${BAT_VERSION}-${BAT_ARCH}-unknown-linux-musl
    fi

    # fd
    if ! command -v fd &>/dev/null; then
      echo "üì¶ Installing fd..."
      FD_VERSION="v10.2.0"
      ARCH="$(uname -m)"
      if [ "$ARCH" = "x86_64" ]; then
        FD_ARCH="x86_64"
      elif [ "$ARCH" = "aarch64" ]; then
        FD_ARCH="aarch64"
      else
        FD_ARCH="x86_64"
      fi
      curl -sL "https://github.com/sharkdp/fd/releases/download/${FD_VERSION}/fd-${FD_VERSION}-${FD_ARCH}-unknown-linux-musl.tar.gz" -o /tmp/fd.tar.gz
      tar -xzf /tmp/fd.tar.gz -C /tmp
      mv /tmp/fd-${FD_VERSION}-${FD_ARCH}-unknown-linux-musl/fd "$HOME/.local/bin/"
      rm -rf /tmp/fd.tar.gz /tmp/fd-${FD_VERSION}-${FD_ARCH}-unknown-linux-musl
    fi

    # ripgrep
    if ! command -v rg &>/dev/null; then
      echo "üì¶ Installing ripgrep..."
      RG_VERSION="14.1.1"
      ARCH="$(uname -m)"
      if [ "$ARCH" = "x86_64" ]; then
        RG_ARCH="x86_64"
      elif [ "$ARCH" = "aarch64" ]; then
        RG_ARCH="aarch64"
      else
        RG_ARCH="x86_64"
      fi
      curl -sL "https://github.com/BurntSushi/ripgrep/releases/download/${RG_VERSION}/ripgrep-${RG_VERSION}-${RG_ARCH}-unknown-linux-musl.tar.gz" -o /tmp/rg.tar.gz
      tar -xzf /tmp/rg.tar.gz -C /tmp
      mv /tmp/ripgrep-${RG_VERSION}-${RG_ARCH}-unknown-linux-musl/rg "$HOME/.local/bin/"
      rm -rf /tmp/rg.tar.gz /tmp/ripgrep-${RG_VERSION}-${RG_ARCH}-unknown-linux-musl
    fi

    # eza
    if ! command -v eza &>/dev/null; then
      echo "üì¶ Installing eza..."
      EZA_VERSION="v0.20.11"
      ARCH="$(uname -m)"
      if [ "$ARCH" = "x86_64" ]; then
        EZA_ARCH="x86_64"
      elif [ "$ARCH" = "aarch64" ]; then
        EZA_ARCH="aarch64"
      else
        EZA_ARCH="x86_64"
      fi
      curl -sL "https://github.com/eza-community/eza/releases/download/${EZA_VERSION}/eza_${EZA_ARCH}-unknown-linux-musl.tar.gz" -o /tmp/eza.tar.gz
      tar -xzf /tmp/eza.tar.gz -C /tmp
      mv /tmp/eza "$HOME/.local/bin/"
      rm /tmp/eza.tar.gz
    fi

    # zoxide
    if ! command -v zoxide &>/dev/null; then
      echo "üì¶ Installing zoxide..."
      ZOXIDE_VERSION="v0.9.6"
      ARCH="$(uname -m)"
      if [ "$ARCH" = "x86_64" ]; then
        ZOXIDE_ARCH="x86_64"
      elif [ "$ARCH" = "aarch64" ]; then
        ZOXIDE_ARCH="aarch64"
      else
        ZOXIDE_ARCH="x86_64"
      fi
      curl -sL "https://github.com/ajeetdsouza/zoxide/releases/download/${ZOXIDE_VERSION}/zoxide-${ZOXIDE_VERSION}-${ZOXIDE_ARCH}-unknown-linux-musl.tar.gz" -o /tmp/zoxide.tar.gz
      tar -xzf /tmp/zoxide.tar.gz -C /tmp
      mv /tmp/zoxide "$HOME/.local/bin/"
      rm /tmp/zoxide.tar.gz
    fi

    # fzf via git
    if ! command -v fzf &>/dev/null; then
      git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
      ~/.fzf/install --bin
    fi
    ;;
esac

# Install starship (common to all platforms)
if ! command -v starship &>/dev/null; then
  echo "üì¶ Installing starship..."
  curl -sS https://starship.rs/install.sh | sh -s -- -y
fi

echo ""
echo "‚úÖ Modern CLI tools installed!"
echo ""
echo "Tools available:"
command -v eza &>/dev/null && echo "  ‚úì eza (better ls)"
