{{ if eq .chezmoi.os "darwin" -}}
# Homebrew packages for macOS
# Note: Linux uses native package managers (see run_once_install-modern-tools.sh.tmpl)

# Fonts
cask "font-sauce-code-pro-nerd-font"

# Applications
cask "ghostty"
cask "docker-desktop"
cask "devpod"
cask "proton-mail"
cask "openvpn-connect"
cask "clickhouse"
cask "ngrok"
cask "jetbrains-gateway"
cask "mongodb-compass"
cask "claude-code"

# Modern CLI Tools
brew "eza"
brew "bat"
brew "fd"
brew "ripgrep"
brew "zoxide"
brew "fzf"
brew "starship"

# Shell & Terminal
brew "bash"
brew "bash-completion"
brew "tmux"
brew "git"
brew "coreutils"
brew "stow"
brew "z"

# Development Tools
brew "gh"
brew "go"
brew "python@3.13"
brew "python@3.12"
brew "uv"
brew "ruff"
brew "mypy"
brew "neovim"
brew "just"
brew "jq"
brew "yq"
brew "tree-sitter"

# Cloud & DevOps
brew "kubernetes-cli"
brew "krew"
brew "k9s"
brew "kustomize"
brew "terraform"
brew "azure-cli"
brew "awscli"
brew "docker"

# Utilities
brew "yazi"
brew "fastfetch"
brew "fga"
brew "hugo"

# Databases & Services
brew "openfga"
brew "nats-io/nats-tools/nats"
brew "nats-server"
brew "nats-io/nats-tools/nsc"
brew "clamav"

# Security & Networking
brew "yara"
brew "bore-cli"
brew "doggo"              # Modern DNS client (better than dig)
brew "gping"              # Ping with a graph
brew "bandwhich"          # Network utilization by process
brew "trippy"             # Modern traceroute with TUI
brew "nmap"               # Network scanner
brew "mtr"                # Network diagnostic tool
brew "netcat"             # TCP/UDP connection tool
brew "nakabonne/ali/ali"  # Loadtest

# System Libraries (dependencies for neovim, etc.)
brew "libvterm"
brew "luv"
brew "luajit"
brew "lpeg"
brew "tree-sitter"
